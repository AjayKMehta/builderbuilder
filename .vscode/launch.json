{
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch BuilderDemo",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build2",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/bin/${input:config}/net7.0/BuilderDemo.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/BuilderDemo",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Launch BuilderGenerator.Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build2",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/bin/${input:config}/net7.0/BuilderGenerator.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}/tests/BuilderGenerator.Tests",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "inputs": [
    {
      // https://marketplace.visualstudio.com/items?itemName=rioj7.command-variable#pickstringremember
      "id": "config",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "key": "buildConfig",
        "default": "Debug",
        "options": [
          "Debug",
          "Release"
        ],
        "description": "Build configuration"
      }
    }
  ]
}
